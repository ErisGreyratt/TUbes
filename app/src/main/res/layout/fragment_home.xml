<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/hairstyle"
        />
    <TextView
        android:id="@+id/HairCut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="220dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Hair Cut"
        android:textColor="@color/black" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/haircut" />

    <TextView
        android:id="@+id/HairStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="220dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Hair Style"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/creambath" />

    <TextView
        android:id="@+id/Creambath"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="220dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Creambath"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/hairstyle1" />
    <TextView
        android:id="@+id/HairModel"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="220dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Hair Model"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/FeaturedSalon"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Featured Salon"
        android:textColor="@color/black"
        android:layout_marginTop="190dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/salonku" />

    <Button
        android:id="@+id/btnRequestUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permission" />


</FrameLayout>